#kivy 2.0

<Octoprint>
    orientation: 'lr-tb'
    size_hint: (None, None)
    pos: 0, 0
    size: 110, 150
    background_color: 0.1, 0.1, 0.1, 1
    printing_done_color: 0.1, 1, 0.1, 1
    printing_error_color: 1, 0, 0, 1
    printing_color: 1, 1, 1, 1
    error: 0
    printing: 0
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
        Color:
            rgba: (1,1,1,0) if self.error == 0 else (1,1,1,1)
        Rectangle:
            pos: self.x+10, self.y+30
            source: 'assets/image/octoprint/warning.png'

    Label:
        id: printer_name
        text: "- - -"
        size_hint: 1, 0.2
        bold: 1
        font_size: 18

    AsyncImage:
        id: nozzle
        size_hint: 0.3, 0.1
        source: 'assets/image/octoprint/nozzle.png'
        opacity: 1 if self.parent.error == 0 else 0
    Label:
        id: nozzle_temp
        size_hint: 0.7, 0.1
        text: "210 / 210"
        color: 1, 1, 1, 1
        font_size: 16
        bold: 1

    AsyncImage:
        id: bed
        size_hint: 0.3, 0.1
        source: 'assets/image/octoprint/bed.png'
        opacity: 1 if self.parent.error == 0 else 0
    Label:
        id: bed_temp
        size_hint: 0.7, 0.1
        text: "70 / 70"
        color: 1, 1, 1, 1
        font_size: 16
        bold: 1

    Label:
        id: progress
        text: "90%"
        size_hint: 1, 0.2
        bold: 1
        font_size: 18

    Label:
        id: printer_times
        text: "? ? ? ?"
        size_hint: 1, 0.2
        bold: 1
        font_size: 18
        #color: self.parent.printing_color if self.parent.error == 0 else self.parent.printing_error_color

    Label:
        id: status
        text: "? ? ? ?"
        size_hint: 1, 0.2
        bold: 1
        font_size: 18
        color: self.parent.printing_color if self.parent.error == 0 else self.parent.printing_error_color

