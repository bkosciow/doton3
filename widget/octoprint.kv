#kivy 2.0

<Octoprint>
    orientation: 'lr-tb'
    size_hint: (None, None)
    pos: 0, 0
    size: 110, 150
    background_color: 0.1, 0.1, 0.1, 1

    printing_done_color: 0.1, 1, 0.1, 1
    printing_error_color: 1, 0, 0, 1
    idle_color: 1, 1, 1, 1
    printing_color: 1, 1, 0, 1

    error: 0
    printing: 0
    done: 0
    canvas.before:
        Color:
            rgb: (.5,.5,.5) if self.done == 0 else self.printing_done_color
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 2
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.width-2, self.height-2
            pos: self.x+1, self.y+1
        Color:
            rgba: (1,1,1,0) if self.error == 0 else (1,1,1,1)
        Rectangle:
            pos: self.x+8, self.y+28
            source: 'assets/image/octoprint/warning.png'

        Color:
            rgba: (1,1,1,1) if self.done == 1 else (1,1,1,0)
        Rectangle:
            pos: self.x+16, self.y+34
            source: 'assets/image/octoprint/done.png'
            size: 80, 80

    Label:
        id: printer_name
        text: "- - -"
        size_hint: 1, 0.2
        bold: 1
        font_size: 18

    AsyncImage:
        id: nozzle
        size_hint: 0.3, 0.1
        source: 'assets/image/octoprint/nozzle.png'
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0
    Label:
        id: nozzle_temp
        size_hint: 0.7, 0.1
        text: " - - -"
        color: self.parent.idle_color if self.parent.printing == 0 else self.parent.printing_color
        font_size: 16
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0
        bold: 1

    AsyncImage:
        id: bed
        size_hint: 0.3, 0.1
        source: 'assets/image/octoprint/bed.png'
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0
    Label:
        id: bed_temp
        size_hint: 0.7, 0.1
        text: " - - - "
        color: self.parent.idle_color if self.parent.printing == 0 else self.parent.printing_color
        font_size: 16
        bold: 1
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0

    Label:
        id: progress
        text: ""
        size_hint: 1, 0.2
        bold: 1
        font_size: 22
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0

    Label:
        id: printer_times
        text: ""
        size_hint: 1, 0.2
        bold: 1
        font_size: 18
        #color: self.parent.printing_color if self.parent.error == 0 else self.parent.printing_error_color
        opacity: 1 if self.parent.error == 0 and self.parent.done == 0 else 0

    Label:
        id: status
        text: ""
        size_hint: 1, 0.2
        bold: 1
        font_size: 18
        color: self.parent.printing_color if self.parent.printing == 1 else self.parent.idle_color if self.parent.error == 0 else self.parent.printing_error_color



<DetailPopup>:
    title: ""
    size_hint: 0.7, 0.8
    status: "unknown"
    print_paused: False
    GridLayout:
        cols: 2
        StackLayout:
            Label:
                id: detail_octoprint
                text_size: self.size
                size_hint: 1, 0.1
            Label:
                id: detail_connection
                text_size: self.size
                size_hint: 1, 0.1
            Label:
                text: "Status:"
                size_hint: 0.3, 0.1
                text_size: self.size
            Label:
                id: detail_status
                size_hint: 0.7, 0.1
                text_size: self.size
            Label:
                text: "Nozzle:"
                size_hint: 0.3, 0.1
                text_size: self.size
            Label:
                id: detail_nozzle
                size_hint: 0.7, 0.1
                text_size: self.size
            Label:
                text: "Bed:"
                size_hint: 0.3, 0.1
                text_size: self.size
            Label:
                id: detail_bed
                size_hint: 0.7, 0.1
                text_size: self.size
            ProgressBar:
                id: detail_completion
                size_hint: 1, 0.1
                max: 100
                text_size: self.size
            Label:
                text: "Print time:"
                size_hint: 0.3, 0.1
                text_size: self.size
            Label:
                id: detail_print_time
                size_hint: 0.7, 0.1
                text_size: self.size
            Label:
                text: "Time left:"
                size_hint: 0.3, 0.1
                text_size: self.size
            Label:
                id: detail_print_time_left
                size_hint: 0.7, 0.1
                text_size: self.size
            Label:
                size_hint: 1, 0.1
            Button:
                size_hint: 0.5, 0.1
                text: "Options"
                font_size: "16sp"
                on_press: root._show_settings()

        TabbedPanel:
            id: detail_status_tabs
            do_default_tab: False
            tab_height: 0
            tab_width: 0
            TabbedPanelItem:
                text: ""
                id: detail_status_error
                Label:
                    text: ""
            TabbedPanelItem:
                text: "unknown"
                id: detail_status_unknown
            TabbedPanelItem:
                text: ""
                id: detail_status_dc
                StackLayout:
                    GridLayout:
                        padding: 10
                        spacing: 0, 10
                        cols: 1
                        id: detail_port_list
                        size_hint: 1, 0.4
                    GridLayout:
                        padding: 10
                        size_hint: 1, 0.1
                        cols: 2
                        Button:
                            text: "115200"
                            font_size: 20
                            height: 30
                            size_hint: 1, None
                            on_press: root._select_baud_action(115200)
                        Button:
                            text: "250000"
                            font_size: 20
                            height: 30
                            size_hint: 1, None
                            on_press: root._select_baud_action(250000)
                    Label:
                        size_hint: 0.3, 0.1
                        text: "Port: "
                        text_size: self.size
                    Label:
                        id: detail_selected_port
                        text_size: self.size
                        size_hint: 0.7, 0.1
                        text: ""
                    Label:
                        size_hint: 0.3, 0.1
                        text: "Baud: "
                        text_size: self.size
                    Label:
                        id: detail_selected_baud
                        text_size: self.size
                        size_hint: 0.7, 0.1
                        text: ""
                    Label:
                        id: detail_selected_port_message
                        size_hint: 1, 0.1
                        text: "select a port"
                    Button:
                        size_hint: 1, 0.1
                        text: "Connect"
                        on_press: root._connect_octoprint()
            TabbedPanelItem:
                text: ""
                id: detail_status_idle
                StackLayout:
                    Button:
                        size_hint: 1, 0.1
                        text: "Refresh"
                        on_press: root._reload_filelist()
                    ScrollView:
                        size_hint: 1, 0.6
                        #size: 1, 0.5
                        StackLayout:
                            height: self.minimum_height
                            padding: 5
                            spacing: 0, 5
                            id: detail_filelist
                            size: self.size
                            size_hint_y: None
                    Label:
                        id: detail_filelist_selected
                        size_hint: 1, 0.1
                        text: "select a file"
                    Button:
                        id: detail_filelist_print
                        size_hint: 1, 0.1
                        text: "Print"
                        on_press: root.start_print()
            TabbedPanelItem:
                text: ""
                id: detail_status_work
                StackLayout:
                    padding: 5
                    Button:
                        id: detail_pause_resume
                        size_hint: 1, 0.1
                        text: "Pause" if not root.print_paused else "Resume"
                        height: "40dp"
                        font_size: "20sp"
                        on_press: root.print_pause_resume()
                    Label:
                        size_hint: 1, 0.04
                    Button:
                        size_hint: 1, 0.1
                        text: "Stop"
                        height: "40dp"
                        font_size: "20sp"
                        on_press: root.print_stop()
            TabbedPanelItem:
                text: ""
                id: detail_status_options
                StackLayout:
                    Label:
                        size_hint: 0.7, 0.1
                        text: "Shutdown after done"
                        text_size: self.size
                    ToggleButton:
                        text: "Yes"
                        id: option_shutdown_after_done
                        size_hint: 0.3, 0.1

                    Label:
                        size_hint: 1, 0.1

                    Label:
                        size_hint: 0.7, 0.1
                        text: "Sort"
                        text_size: self.size
                    ToggleButton:
                        size_hint: 0.3, 0.1
                        text: "Default"
                        id: option_sort_default
                        group: "sort_options"
                    Label:
                        size_hint: 0.7, 0.1
                    ToggleButton:
                        size_hint: 0.3, 0.1
                        text: "Name"
                        id: option_sort_name
                        group: "sort_options"

                    Label:
                        size_hint: 0.7, 0.1
                    Button:
                        size_hint: 0.7, 0.1
                        text: "Save"
                        on_press: root.save_settings()