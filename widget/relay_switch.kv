#kivy 2.0
<RelaySwitch>
    orientation: 'lr-tb'
    size: 80,100
    size_hint: None, None
    state: 'normal'
    background_down: 'assets/image/button/switch_off.png'
    background_normal: 'assets/image/button/switch_on.png'
    AsyncImage:
        size_hint: 1, 0.8

        source: self.parent.background_normal if self.parent.state == 'normal' else self.parent.background_down
        id: activator
        nocache: 1
    Label:
        id: device_name
        size_hint: 1, 0.2
        text: ''
        color: 1,1,1,1
        bold: 1
        font_size: 20
