#kivy 2.0

<Weather>
    orientation: 'lr-tb'
    size_hint: (None, None)
    size: 250, 180
    pos: 0, 0
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
        Color:
            rgb: 1, 0, 0
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

    ImageRotate:
        size_hint: 0.10, 0.2
        source: 'assets/image/openweather/compass.png'
        allow_stretch: 1
        keep_ratio: 1
        angle: -77
    Label:
        size_hint: 0.15, 0.2
        text: "25"
        font_size: 16
        bold: 1
    WeatherCloudiness:
        size_hint: 0.15, 0.2
        value: 50
    Label:
        size_hint: 0.2, 0.2
    ImageRotate:
        size_hint: 0.10, 0.2
        source: 'assets/image/openweather/compass.png'
        angle: 23
    Label:
        size_hint: 0.15, 0.2
        text: "5"
        font_size: 16
        bold: 1
    WeatherCloudiness:
        size_hint: 0.15, 0.2
        value: 10


    Image:
        size_hint: 0.05, 0.3
        source: 'assets/image/openweather/drop_full.png'
    Image:
        size_hint: 0.2, 0.3
        id: current_icon
        source: 'assets/image/openweather/201.png'
        size: self.texture_size
    Label:
        size_hint: 0.2, 0.3
        text: "27"
        font_size: 34
        bold: 1
        color: 1, 106/255.0, 0, 1
    Label:
        size_hint: 0.1, 0.3
    Image:
        size_hint: 0.05, 0.3
        source: 'assets/image/openweather/drop_full.png'
    Image:
        size_hint: 0.2, 0.3
        id: current_icon
        source: 'assets/image/openweather/301.png'
        size: self.texture_size
    Label:
        size_hint: 0.2, 0.3
        text: "-18"
        font_size: 34
        bold: 1
        color: 46/255, 144/255, 193/255, 1

#    Label:
#        size_hint: 1, 0.1

    Image:
        size_hint: 0.33, 0.3
        source: 'assets/image/openweather/200.png'
        size: self.texture_size
        halign: "center"
        valign: "middle"
#    Label:
#        size_hint: 0.2, 0.3
    Image:
        size_hint: 0.33, 0.3
        size: self.texture_size
        source: 'assets/image/openweather/202.png'
        size: self.texture_size
        halign: "center"
        valign: "middle"
#    Label:
#        size_hint: 0.2, 0.3
    Image:
        size_hint: 0.34, 0.3
        source: 'assets/image/openweather/210.png'
        size: self.texture_size
        halign: "center"
        valign: "middle"

    Label:
        size_hint: 0.33, 0.2
        text: "2"
        color: 1, 106/255.0, 0, 1
        font_size: 30
        bold: 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        halign: "right"
        valign: "middle"
