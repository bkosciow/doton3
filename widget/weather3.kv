#kivy 2.0

<Weather>
    orientation: 'lr-tb'
    size_hint: (None, None)
    size: 250, 180
    pos: 0, 0
    canvas.before:
        Color:
            rgb: 64/255, 64/255, 64/255
        Rectangle:
            size: (self.width / 2), 90
            pos: self.x-5, self.y + 90
            source: 'assets/image/openweather/rounded_box.png'
        Rectangle:
            size: (self.width / 2), 90
            pos: self.x + (self.width / 2) + 5,  self.y + 90
            source: 'assets/image/openweather/rounded_box.png'
        Rectangle:
            size: (self.width), 88
            pos: self.x,  self.y
            source: 'assets/image/openweather/rounded_big_box.png'
        Color:
            rgb: 1, 0, 0

    ImageRotate:
        id: current_wind_icon
        size_hint: 0.10, 0.2
        source: 'assets/image/openweather/wind_arrow.png'
        allow_stretch: 1
        keep_ratio: 1
        angle: 0
    Label:
        id: current_wind_label
        size_hint: 0.15, 0.2
        text: "--"
        font_size: 16
        bold: 1
    WeatherCloudiness:
        id: current_cloudiness
        size_hint: 0.15, 0.2
        value: 0
    Label:
        size_hint: 0.2, 0.2
    ImageRotate:
        id: day0_wind_icon
        size_hint: 0.10, 0.2
        source: 'assets/image/openweather/wind_arrow.png'
        angle: 23
    Label:
        id: day0_wind_label
        size_hint: 0.15, 0.2
        text: "--"
        font_size: 16
        bold: 1
    WeatherCloudiness:
        id: day0_cloudiness
        size_hint: 0.15, 0.2
        value: 10


    WeatherHumidity:
        id: current_humidity
        size_hint: 0.05, 0.3
        value: 50
    AsyncImage:
        id: current_icon
        size_hint: 0.2, 0.3
        id: current_icon
        source: 'assets/image/openweather/201.png'
        size: self.texture_size
        nocache: 1
    WeatherTemperature:
        id: current_temperature
        size_hint: 0.2, 0.3
        font_size: 34
    Label:
        size_hint: 0.1, 0.3
    WeatherHumidity:
        id: day0_humidity
        size_hint: 0.05, 0.3
        value: 0
    AsyncImage:
        id: day0_icon
        size_hint: 0.2, 0.3
        source: 'assets/image/openweather/301.png'
        size: self.texture_size
    WeatherTemperature:
        id: day0_temperature_max
        size_hint: 0.2, 0.3
        font_size: 34


    ImageRotate:
        id: day1_wind_icon
        size_hint: 0.06, 0.2
        source: 'assets/image/openweather/wind_arrow.png'
        angle: 0
    AsyncImage:
        id: day1_icon
        size_hint: 0.24, 0.3
        source: 'assets/image/openweather/803.png'
        size: self.texture_size
    Label:
        size_hint: 0.05, 0.3
    ImageRotate:
        id: day1_wind_icon
        size_hint: 0.06, 0.2
        source: 'assets/image/openweather/wind_arrow.png'
        angle: 0
    AsyncImage:
        id: day2_icon
        size_hint: 0.24, 0.3
        size: self.texture_size
        source: 'assets/image/openweather/803.png'
        size: self.texture_size
    Label:
        size_hint: 0.05, 0.3
    ImageRotate:
        id: day1_wind_icon
        size_hint: 0.06, 0.2
        source: 'assets/image/openweather/wind_arrow.png'
        angle: 0
    AsyncImage:
        id: day3_icon
        size_hint: 0.24, 0.3
        source: 'assets/image/openweather/803.png'
        size: self.texture_size


    Label:
        size_hint: 0.03, 0.1
    WeatherTemperature:
        id: day1_temperature_max
        size_hint: 0.15, 0.1
        font_size: 28
        bold: 1
    WeatherTemperature:
        id: day1_temperature_min
        size_hint: 0.15, 0.2
        font_size: 20
        bold: 1

    Label:
        size_hint: 0.03, 0.1
    WeatherTemperature:
        id: day2_temperature_max
        size_hint: 0.15, 0.1
        font_size: 28
        bold: 1
    WeatherTemperature:
        id: day2_temperature_min
        size_hint: 0.15, 0.2
        font_size: 20
        bold: 1

    Label:
        size_hint: 0.03, 0.1
    WeatherTemperature:
        id: day3_temperature_max
        size_hint: 0.15, 0.1
        font_size: 28
        bold: 1
    WeatherTemperature:
        id: day3_temperature_min
        size_hint: 0.15, 0.2
        font_size: 20
        bold: 1
